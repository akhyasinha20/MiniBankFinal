@{
    ViewBag.Title = "Open Savings Account";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";

    int step = 1;
    if (ViewBag.Step != null) { int.TryParse(ViewBag.Step.ToString(), out step); }
    var pan = ViewBag.PAN as string ?? "";
    var name = ViewBag.Name as string ?? "";
    var dob = ViewBag.DOB as string ?? "";
    var minBalance = ViewBag.MinBalance != null ? ViewBag.MinBalance.ToString() : "";
    var email = ViewBag.Email as string ?? "";
}

<div class="card single-card-centered mt-4">
    <div class="card-body p-4">
        <div class="d-flex justify-content-between align-items-start mb-3">
            <div>
                <h3 class="mb-1 text-primary">Open Savings Account</h3>
                <div class="text-muted small">Two-step process: PAN → details</div>
            </div>
           
        </div>

        @if (ViewBag.Message != null)
        {
            <div class="alert alert-success">@ViewBag.Message</div>
        }
        else
        {
            if (ViewBag.Error != null)
            { <div class="alert alert-danger">@ViewBag.Error</div> }

        if (step == 1)
        {
            <form method="post" class="row g-3">
                @Html.AntiForgeryToken()
                <div class="col-12">
                    <label class="form-label">PAN</label>
                    <input type="text" name="pan" class="form-control" value="@pan" required />
                    <div class="form-text">Enter customer's PAN to check existence and continue.</div>
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-primary w-100">Next</button>
                </div>
            </form>
        }
        else
        {
            <form method="post" class="row g-3">
                @Html.AntiForgeryToken()
                <input type="hidden" name="pan" value="@pan" />

                <div class="col-md-6">
                    <label class="form-label">Customer Name</label>
                    <input type="text" name="name" class="form-control" value="@name" required />
                </div>

                <div class="col-md-6">
                    <label class="form-label">Email</label>
                    <input type="email" name="email" class="form-control" value="@email" />
                </div>

                <div class="col-md-6">
                    <label class="form-label">Date of Birth</label>
                    <input type="date" name="dob" class="form-control" value="@dob" required max="@DateTime.Now.ToString("yyyy-MM-dd")" />
                </div>

                <div class="col-md-6">
                    <label class="form-label">Initial Deposit (Min ₹1000)</label>
                    <input type="number" name="minBalance" step="0.01" min="1000" class="form-control" value="@minBalance" required />
                </div>

                <div class="col-12">
                    <button type="submit" class="btn btn-success w-100">Create Account</button>
                </div>
            </form>
        }
    }
    </div>
</div>