
@{
    ViewBag.Title = "Transactions";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="container mt-4">
    <h3 class="mb-3">View Transactions</h3>

    <div class="card p-3 mb-3">
        <form method="post" class="row g-2" asp-action="ViewTransactions">
            @Html.AntiForgeryToken()
            <div class="col-md-4">
                <label class="form-label">Customer ID</label>
                <input type="number" name="customerId" class="form-control" value="@(ViewBag.Customer != null ? (ViewBag.Customer as dynamic).CustomerId.ToString() : "")" placeholder="Optional" min="1" />
            </div>
            <div class="col-md-3">
                <label class="form-label">From Date</label>
                <input type="date" name="fromDate" class="form-control" value="@(ViewBag.FromDate ?? "")" />
            </div>
            <div class="col-md-3">
                <label class="form-label">To Date</label>
                <input type="date" name="toDate" class="form-control" value="@(ViewBag.ToDate ?? "")" />
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-primary w-100">Search</button>
            </div>
            <div class="col-12 text-muted mt-2">Either enter Customer ID (shows that customer's transactions), or enter both dates (shows all transactions in range). You can combine both to filter a customer's transactions by date.</div>
        </form>
    </div>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    @if (ViewBag.Customer != null)
    {
        <div class="mb-2"><strong>Customer:</strong> @((ViewBag.Customer as MiniBank.Models.Customer)?.CustName) (ID: @((ViewBag.Customer as MiniBank.Models.Customer)?.CustomerId))</div>
    }

    @{
        var savings = ViewBag.SavingsTransactions as List<MiniBank.Models.SavingsTransaction>;
        var loans = ViewBag.LoanTransactions as List<MiniBank.Models.LoanTransaction>;
    }

    <h5>Savings Transactions</h5>
    @if (savings == null)
    {
        <div class="text-muted">No savings transactions loaded.</div>
    }
    else if (!savings.Any())
    {
        <div class="alert alert-info">No savings transactions found for the selected criteria.</div>
    }
    else
    {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Transaction ID</th>
                    <th>Account ID</th>
                    <th>Type</th>
                    <th>Amount (₹)</th>
                    <th>Balance After (₹)</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var t in savings)
                {
                    <tr>
                        <td>@t.TransactionId</td>
                        <td>@t.AccountId</td>
                        <td>@t.TransactionType</td>
                        <td>@t.Amount.ToString("F2")</td>
                        <td>@t.BalanceAfter.ToString("F2")</td>
                        <td>@(t.TransactionDate.HasValue ? t.TransactionDate.Value.ToString("yyyy/MM/dd HH:mm") : "-")</td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <h5 class="mt-4">Loan Transactions</h5>
    @if (loans == null)
    {
        <div class="text-muted">No loan transactions loaded.</div>
    }
    else if (!loans.Any())
    {
        <div class="alert alert-info">No loan transactions found for the selected criteria.</div>
    }
    else
    {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Transaction ID</th>
                    <th>Loan Account ID</th>
                    <th>Amount (₹)</th>
                    <th>Outstanding After (₹)</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var t in loans)
                {
                    <tr>
                        <td>@t.TransactionId</td>
                        <td>@t.LoanAccountId</td>
                        <td>@t.Amount.ToString("F2")</td>
                        <td>@t.OutstandingAfter.ToString("F2")</td>
                        <td>@(t.TransDate.HasValue ? t.TransDate.Value.ToString("yyyy/MM/dd HH:mm") : "-")</td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <a class="btn btn-secondary mt-3" href="@Url.Action("Dashboard","Manager")">Back to Dashboard</a>
</div>