@{
    ViewBag.Title = "Transactions";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="card p-4 mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="mb-0 text-primary">View Transactions</h3>
      
    </div>

    <div class="card p-3 mb-3">
        <form method="post" class="row g-2">
            @Html.AntiForgeryToken()
            <div class="col-md-4">
                <label class="form-label">Customer ID</label>
                <input type="number" name="customerId" class="form-control" value="@(ViewBag.Customer != null ? (ViewBag.Customer as dynamic).CustomerId.ToString() : "")" placeholder="Optional" min="1" />
            </div>
            <div class="col-md-3">
                <label class="form-label">From Date</label>
                <input type="date" name="fromDate" class="form-control" value="@(ViewBag.FromDate ?? "")" />
            </div>
            <div class="col-md-3">
                <label class="form-label">To Date</label>
                <input type="date" name="toDate" class="form-control" value="@(ViewBag.ToDate ?? "")" />
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-primary w-100">Search</button>
            </div>
            <div class="col-12 text-muted mt-2">Provide a Customer ID, or a date range, or both to filter transactions.</div>
        </form>
    </div>

    @if (ViewBag.Error != null)
    {<div class="alert alert-danger">@ViewBag.Error</div>}

    <div class="mb-3">
        <h5 class="mb-2">Savings Transactions</h5>
        @if (ViewBag.SavingsTransactions == null || !((IEnumerable<object>)ViewBag.SavingsTransactions).Any())
        {
            <div class="alert alert-info">No savings transactions found for the selected criteria.</div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead class="table-light">
                        <tr>
                            <th>Transaction ID</th>
                            <th>Account ID</th>
                            <th>Type</th>
                            <th>Amount (₹)</th>
                            <th>Balance After (₹)</th>
                            <th>Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var t in (IEnumerable<MiniBank.Models.SavingsTransaction>)ViewBag.SavingsTransactions)
                        {
                            <tr>
                                <td>@t.TransactionId</td>
                                <td>@t.AccountId</td>
                                <td>@t.TransactionType</td>
                                <td>@t.Amount.ToString("F2")</td>
                                <td>@t.BalanceAfter.ToString("F2")</td>
                                <td>@(t.TransactionDate.HasValue ? t.TransactionDate.Value.ToString("yyyy/MM/dd HH:mm") : "-")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>

    <div class="mb-3">
        <h5 class="mb-2">Loan Transactions</h5>
        @if (ViewBag.LoanTransactions == null || !((IEnumerable<object>)ViewBag.LoanTransactions).Any())
        {
            <div class="alert alert-info">No loan transactions found for the selected criteria.</div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead class="table-light">
                        <tr>
                            <th>Transaction ID</th>
                            <th>Loan Account ID</th>
                            <th>Amount (₹)</th>
                            <th>Outstanding After (₹)</th>
                            <th>Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var t in (IEnumerable<MiniBank.Models.LoanTransaction>)ViewBag.LoanTransactions)
                        {
                            <tr>
                                <td>@t.TransactionId</td>
                                <td>@t.LoanAccountId</td>
                                <td>@t.Amount.ToString("F2")</td>
                                <td>@t.OutstandingAfter.ToString("F2")</td>
                                <td>@(t.TransDate.HasValue ? t.TransDate.Value.ToString("yyyy/MM/dd HH:mm") : "-")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>