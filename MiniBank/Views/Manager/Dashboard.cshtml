@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="card p-4 mt-4">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <div>
            <h1 class="page-title mb-0">Manager Dashboard</h1>
            <div class="text-muted small">Overview & quick actions</div>
        </div>
        <div class="text-end">
            <small class="text-muted">Signed in as</small>
            <div class="fw-semibold text-primary">@Session["Username"]</div>
        </div>
    </div>


    <div class="dashboard-grid mt-3">
        <div class="dashboard-card variant-blue">
            <div class="card-top">
                <div class="icon" aria-hidden="true">
                    <svg width="28" height="28" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M12 12a5 5 0 100-10 5 5 0 000 10z" fill="#0b3d91" />
                        <path d="M3 21c0-3.3 4.3-6 9-6s9 2.7 9 6" fill="#0b3d91" opacity="0.06" />
                    </svg>
                </div>
                <div>
                    <div class="card-title">Total Employees</div>
                    <div class="card-sub">Active employee accounts</div>
                </div>
            </div>

            <div class="d-flex justify-content-between align-items-end mt-3">
                <div class="value" style="font-size:1.6rem;font-weight:700;">
                    @(ViewBag.TotalEmployees ?? 0)
                </div>
                <div class="text-muted small"> </div>
            </div>
        </div>

        <div class="dashboard-card variant-gold">
            <div class="card-top">
                <div class="icon" aria-hidden="true">
                    <svg width="28" height="28" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <rect x="3" y="4" width="18" height="16" rx="2" fill="#c9a14a" opacity="0.08" />
                        <path d="M7 10h10" stroke="#c9a14a" stroke-width="1.4" stroke-linecap="round" />
                    </svg>
                </div>
                <div>
                    <div class="card-title">Total Customers</div>
                    <div class="card-sub">Registered customers</div>
                </div>
            </div>

            <div class="d-flex justify-content-between align-items-end mt-3">
                <div class="value" style="font-size:1.6rem;font-weight:700;">
                    @(ViewBag.TotalCustomers ?? 0)
                </div>
                <div class="text-muted small"> </div>
            </div>
        </div>

        <div class="dashboard-card variant-teal">
            <div class="card-top">
                <div class="icon" aria-hidden="true">
                    <svg width="28" height="28" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <ellipse cx="12" cy="6" rx="6" ry="2" fill="#0fa3a1" />
                        <path d="M6 6v6c0 2.2 3.3 4 6 4s6-1.8 6-4V6" fill="#0fa3a1" opacity="0.06" />
                    </svg>
                </div>
                <div>
                    <div class="card-title">Total Loan Accounts</div>
                    <div class="card-sub">Active loan accounts</div>
                </div>
            </div>

            <div class="d-flex justify-content-between align-items-end mt-3">
                <div class="value" style="font-size:1.6rem;font-weight:700;">
                    @(ViewBag.TotalLoanAccounts ?? 0)
                </div>
                <div class="text-muted small"> </div>
            </div>
        </div>
        <div class="dashboard-card variant-teal">
            <div class="card-top">
                <div class="icon" aria-hidden="true">
                    <svg width="28" height="28" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <ellipse cx="12" cy="6" rx="6" ry="2" fill="#0fa3a1" />
                        <path d="M6 6v6c0 2.2 3.3 4 6 4s6-1.8 6-4V6" fill="#0fa3a1" opacity="0.06" />
                    </svg>
                </div>
                <div>
                    <div class="card-title">Total Fixed Deposit Accounts</div>
                    <div class="card-sub">Active Fixed Deposit accounts</div>
                </div>
            </div>

            <div class="d-flex justify-content-between align-items-end mt-3">
                <div class="value" style="font-size:1.6rem;font-weight:700;">
                    @(ViewBag.TotalFixedAccounts ?? 0)
                </div>
                <div class="text-muted small"> </div>
            </div>
        </div>
  
        <div class="dashboard-card variant-blue">
            <div class="card-top">
                <div class="icon" aria-hidden="true">
                    <svg width="28" height="28" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M12 12a5 5 0 100-10 5 5 0 000 10z" fill="#0b3d91" />
                        <path d="M3 21c0-3.3 4.3-6 9-6s9 2.7 9 6" fill="#0b3d91" opacity="0.06" />
                    </svg>
                </div>
                <div>
                    <div class="card-title">Manage Employees</div>
                    <div class="card-sub">Approve / remove employees</div>
                </div>
            </div>

            <div class="d-flex justify-content-end mt-3">
                <a class="btn btn-primary" href="@Url.Action("AddEmployee","Manager")">Open</a>
            </div>
        </div>

        <div class="dashboard-card variant-gold">
            <div class="card-top">
                <div class="icon" aria-hidden="true">
                    <svg width="28" height="28" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <rect x="3" y="4" width="18" height="16" rx="2" fill="#c9a14a" opacity="0.08" />
                        <path d="M7 10h10" stroke="#c9a14a" stroke-width="1.4" stroke-linecap="round" />
                    </svg>
                </div>
                <div>
                    <div class="card-title">Manage Customers</div>
                    <div class="card-sub">View / edit customer accounts</div>
                </div>
            </div>

            <div class="d-flex justify-content-end mt-3">
                <a class="btn btn-outline-accent" href="@Url.Action("ManageCustomers","Manager")">Open</a>
            </div>
        </div>


        <div class="dashboard-card variant-accent">
            <div class="card-top">
                <div class="icon" aria-hidden="true">
                    <svg width="28" height="28" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M3 7h18" stroke="#6c757d" stroke-width="1.6" stroke-linecap="round" />
                        <path d="M12 3v14" stroke="#6c757d" stroke-width="1.6" stroke-linecap="round" />
                    </svg>
                </div>
                <div>
                    <div class="card-title">Open Account</div>
                    <div class="card-sub">Create savings account for customer</div>
                </div>
            </div>

            <div class="d-flex justify-content-end mt-3">
                <a class="btn btn-outline-primary" href="@Url.Action("OpenAccount","Manager")">Open</a>
            </div>
        </div>
        <!-- Fixed Deposit: manager quick action (added) -->
        <div class="dashboard-card variant-green">
            <div class="card-top">
                <div class="icon">
                    <svg width="28" height="28" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <circle cx="12" cy="12" r="9" fill="#0b854f" opacity="0.06" />
                        <path d="M8 12h8M8 16h8M8 8h8" stroke="#0b854f" stroke-width="1.4" stroke-linecap="round" />
                    </svg>
                </div>
                <div>
                    <div class="card-title">Fixed Deposit</div>
                    <div class="card-sub">Open Fixed Deposit account</div>
                </div>
            </div>

            <div class="d-flex justify-content-end mt-3">
                <a class="btn btn-success" href="@Url.Action("OpenFixedDeposit","Manager")">Open</a>
            </div>
        </div>

        <div class="dashboard-card variant-teal">
            <div class="card-top">
                <div class="icon" aria-hidden="true">
                    <svg width="28" height="28" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <ellipse cx="12" cy="6" rx="6" ry="2" fill="#0fa3a1" />
                        <path d="M6 6v6c0 2.2 3.3 4 6 4s6-1.8 6-4V6" fill="#0fa3a1" opacity="0.06" />
                    </svg>
                </div>
                <div>
                    <div class="card-title">Open Loan Account</div>
                    <div class="card-sub">Create loan for a customer</div>
                </div>
            </div>

            <div class="d-flex justify-content-end mt-3">
                <a class="btn btn-teal" href="@Url.Action("OpenLoanAccount","Manager")">Create</a>
            </div>
        </div>

        <div class="dashboard-card variant-coral">
            <div class="card-top">
                <div class="icon" aria-hidden="true">
                    <svg width="28" height="28" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <rect x="3" y="4" width="18" height="16" rx="2" fill="#ff6b6b" opacity="0.06" />
                        <path d="M7 12h10" stroke="#ff6b6b" stroke-width="1.4" stroke-linecap="round" />
                    </svg>
                </div>
                <div>
                    <div class="card-title">View Transactions</div>
                    <div class="card-sub">Search transactions by customer/date</div>
                </div>
            </div>

            <div class="d-flex justify-content-end mt-3">
                <a class="btn btn-coral" href="@Url.Action("ViewTransactions","Manager")">View</a>
            </div>
        </div>

        <div class="dashboard-card variant-blue">
            <div class="card-top">
                <div class="icon" aria-hidden="true">
                    <svg width="28" height="28" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M2 12h20" stroke="#0b3d91" stroke-width="1.6" stroke-linecap="round" />
                        <path d="M6 8v8" stroke="#0b3d91" stroke-width="1.6" stroke-linecap="round" />
                    </svg>
                </div>
                <div>
                    <div class="card-title">Deposit / Withdraw</div>
                    <div class="card-sub">Process savings transactions</div>
                </div>
            </div>

            <div class="d-flex justify-content-end mt-3">
                <a class="btn btn-outline-accent" href="@Url.Action("DepositWithdraw","Manager")">Open</a>
            </div>
        </div>
    </div>
</div>