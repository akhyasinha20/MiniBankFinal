@{
    ViewBag.Title = "Open Fixed Deposit";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="card single-card-centered mt-4">
    <div class="card-body p-4">
        <div class="d-flex justify-content-between align-items-start mb-3">
            <div>
                <h3 class="mb-1 text-primary">Open Fixed Deposit</h3>
                <div class="text-muted small">Minimum deposit ₹10,000. ROI depends on tenure; senior customers get +0.5% (calculated server-side).</div>
            </div>
        </div>

        <form method="post" action="@Url.Action("OpenFixedDeposit","Manager")" class="row g-3">
            @Html.AntiForgeryToken()

            <div class="col-md-4">
                <label class="form-label">Customer ID</label>
                <input type="number" name="customerId" class="form-control" min="1" required value="@(ViewBag.CustomerId ?? string.Empty)" />
            </div>

            <div class="col-md-4">
                <label class="form-label">Principal Amount (₹)</label>
                <input type="number" step="0.01" name="principalAmount" class="form-control" min="10000" required value="@(ViewBag.Principal ?? string.Empty)" />
                <div class="form-text text-muted">Minimum deposit ₹10,000.</div>
            </div>

            <div class="col-md-4">
                <label class="form-label">Tenure (years)</label>
                <input type="number" name="tenureYears" class="form-control" min="1" required value="@(ViewBag.TenureYears ?? string.Empty)" />
                <div class="form-text text-muted">Enter whole number of years.</div>
            </div>

            <div class="col-12 d-flex gap-2">
                <button type="submit" class="btn btn-success">Open Fixed Deposit</button>
                <a href="@Url.Action("Dashboard","Manager")" class="btn btn-outline-secondary">Cancel</a>
            </div>

            <div class="col-12">
                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger mt-2">@ViewBag.Error</div>
                }
                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-success mt-2">@ViewBag.Message</div>
                }

                @if (ViewBag.AccountNumber != null || ViewBag.MaturityAmount != null)
                {
                    <div class="mt-3">
                        @if (ViewBag.AccountNumber != null)
                        {<div><strong>Account#:</strong> @ViewBag.AccountNumber</div>}
                        @if (ViewBag.ROI != null)
                        {<div><strong>ROI:</strong> @String.Format("{0:F2}%", ViewBag.ROI)</div>}
                        @if (ViewBag.MaturityAmount != null)
                        {<div><strong>Maturity Amount:</strong> ₹@String.Format("{0:N2}", ViewBag.MaturityAmount)</div>}
                        @if (ViewBag.MaturityDate != null)
                        {<div><strong>Maturity Date:</strong> @ViewBag.MaturityDate</div>}
                    </div>
                }
            </div>
        </form>
    </div>
</div>