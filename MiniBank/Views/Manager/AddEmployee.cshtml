@model IEnumerable<MiniBank.Models.UserRegister>
@{
    ViewBag.Title = "Manage Employees";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="card single-card-centered mt-4">
    <div class="card-body p-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h3 class="mb-0 text-primary">Manage Employees</h3>
          
        </div>

        @if (TempData["Success"] != null)
        {<div class="alert alert-success">@TempData["Success"]</div>}
        @if (TempData["Error"] != null)
        {<div class="alert alert-danger">@TempData["Error"]</div>}

        <div class="table-responsive mt-3">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        foreach (var emp in Model)
                        {
                            <tr>
                                <td>@emp.UserId</td>
                                <td>@emp.Username</td>
                                <td>@emp.Email</td>
                                <td>
                                    @if (emp.IsActive == true)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark">Pending</span>
                                    }
                                </td>
                                <td>
                                    @if (emp.IsActive != true)
                                    {
                                        using (Html.BeginForm("Approve", "Manager", FormMethod.Post, new { @class = "d-inline" }))
                                        {
                                            @Html.AntiForgeryToken()
                                            @Html.Hidden("id", emp.UserId)
                                            <button type="submit" class="btn btn-sm btn-success">Approve</button>
                                        }
                                    }

                                    @using (Html.BeginForm("Remove", "Manager", FormMethod.Post, new { @class = "d-inline ms-2" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.Hidden("id", emp.UserId)
                                        <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                                    }
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>