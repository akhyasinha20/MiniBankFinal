@{
    ViewBag.Title = "Customer Transactions";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
    var customer = ViewBag.Customer;
    var savings = ViewBag.SavingsTransactions as IEnumerable<dynamic> ?? Enumerable.Empty<dynamic>();
    var loans = ViewBag.LoanTransactions as IEnumerable<dynamic> ?? Enumerable.Empty<dynamic>();
}

<div class="container mt-4">
    <h3>Transactions for @((customer!=null)? customer.CustName : "Customer")</h3>

    <h5 class="mt-3">Savings Transactions</h5>
    @if (!savings.Any())
    {
        <div class="alert alert-info">No savings transactions found.</div>
    }
    else
    {
        <table class="table table-sm">
            <thead><tr><th>Date</th><th>Type</th><th>Amount</th><th>Balance After</th></tr></thead>
            <tbody>
                @foreach (var t in savings)
                {
                    <tr>
                        <td>@(t.TransactionDate?.ToString("g"))</td>
                        <td>@t.TransactionType</td>
                        <td>@t.Amount</td>
                        <td>@t.BalanceAfter</td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <h5 class="mt-4">Loan Transactions</h5>
    @if (!loans.Any())
    {
        <div class="alert alert-info">No loan transactions found.</div>
    }
    else
    {
        <table class="table table-sm">
            <thead><tr><th>Date</th><th>Amount</th><th>Outstanding After</th></tr></thead>
            <tbody>
                @foreach (var t in loans)
                {
                    <tr>
                        <td>@(t.TransDate?.ToString("g"))</td>
                        <td>@t.Amount</td>
                        <td>@t.OutstandingAfter</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>