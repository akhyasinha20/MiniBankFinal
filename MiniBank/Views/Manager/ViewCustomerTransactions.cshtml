@{
    ViewBag.Title = "Customer Transactions";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
    var customer = ViewBag.Customer;
    var savings = ViewBag.SavingsTransactions as IEnumerable<dynamic> ?? Enumerable.Empty<dynamic>();
    var loans = ViewBag.LoanTransactions as IEnumerable<dynamic> ?? Enumerable.Empty<dynamic>();
}

<div class="card p-4 mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="mb-0 text-primary">Transactions for @((customer!=null)? customer.CustName : "Customer")</h3>
        <a class="btn btn-outline-accent btn-sm" href="@Url.Action("ManageCustomers","Manager")">Back</a>
    </div>

    <div class="mb-3">
        <h5>Savings Transactions</h5>
        @if (!savings.Any())
        {
            <div class="alert alert-info">No savings transactions found.</div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-sm table-striped">
                    <thead class="table-light"><tr><th>Date</th><th>Type</th><th>Amount</th><th>Balance After</th></tr></thead>
                    <tbody>
                        @foreach (var t in savings)
                        {
                            <tr>
                                <td>@(t.TransactionDate?.ToString("yyyy/MM/dd HH:mm"))</td>
                                <td>@t.TransactionType</td>
                                <td>@String.Format("{0:N2}", t.Amount)</td>
                                <td>@String.Format("{0:N2}", t.BalanceAfter)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>

    <div class="mb-3">
        <h5>Loan Transactions</h5>
        @if (!loans.Any())
        {
            <div class="alert alert-info">No loan transactions found.</div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-sm table-striped">
                    <thead class="table-light"><tr><th>Date</th><th>Amount</th><th>Outstanding After</th></tr></thead>
                    <tbody>
                        @foreach (var t in loans)
                        {
                            <tr>
                                <td>@(t.TransDate?.ToString("yyyy/MM/dd HH:mm"))</td>
                                <td>@String.Format("{0:N2}", t.Amount)</td>
                                <td>@String.Format("{0:N2}", t.OutstandingAfter)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>