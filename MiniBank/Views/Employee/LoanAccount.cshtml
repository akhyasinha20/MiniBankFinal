@{
    ViewBag.Title = "Open Loan Account";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="card single-card-centered mt-4">
    <div class="card-body p-4">
        <div class="d-flex justify-content-between align-items-start mb-3">
            <div>
                <h3 class="mb-1 text-primary">Open Loan Account</h3>
                <div class="text-muted small">Minimum loan ₹10,000. ROI and EMI are calculated server-side and displayed after submission.</div>
            </div>
        </div>

        <form method="post" action="@Url.Action("LoanAccount","Employee")" class="row g-3">
            @Html.AntiForgeryToken()

            <div class="col-md-6">
                <label class="form-label">Customer ID</label>
                <input type="number" name="customerId" class="form-control" min="1" required value="@(ViewBag.CustomerId ?? string.Empty)" />
                
            </div>

            <div class="col-md-6">
                <label class="form-label">Loan Amount (₹)</label>
                <input type="number" step="0.01" name="loanAmount" class="form-control" min="10000" required value="@(ViewBag.LoanAmount ?? string.Empty)" />
                <div class="form-text text-muted">Minimum loan amount ₹10,000.</div>
            </div>

            <div class="col-md-6">
                <label class="form-label">Tenure (months)</label>
                <input type="number" name="tenure" class="form-control" min="1" required value="@(ViewBag.Tenure ?? string.Empty)" />
                <div class="form-text text-muted">Enter tenure in months.</div>
            </div>

            <div class="col-md-6">
                <label class="form-label"> Monthly Salary (₹)</label>
                <input type="number" step="0.01" name="monthlyTakeHome" class="form-control" min="0" required value="@(ViewBag.MonthlyTakeHome ?? string.Empty)" />
               
            </div>

            <div class="col-12 d-flex gap-2">
                <button type="submit" class="btn btn-primary w-100">Create Loan Account</button>
                <a href="@Url.Action("Dashboard","Employee")" class="btn btn-outline-secondary">Cancel</a>
            </div>

            <div class="col-12">
                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger mt-2">@ViewBag.Error</div>
                }
                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-success mt-2">@ViewBag.Message</div>
                }

                @* Server-provided results: Account number, EMI, ROI *@
                @if (ViewBag.AccountNumber != null)
                {
                    <div class="alert alert-success mt-2">
                        <strong>Account#:</strong> @Html.Encode(ViewBag.AccountNumber)
                    </div>
                }
                @if (ViewBag.EMI != null)
                {
                    <div class="alert alert-success mt-2">
                        <strong>EMI (monthly):</strong> ₹@((decimal)ViewBag.EMI).ToString("F2")
                    </div>
                }
                @if (ViewBag.ROI != null)
                {
                    <div class="alert alert-info mt-2">
                        <strong>Applied ROI:</strong> @((decimal)ViewBag.ROI).ToString("F2")%
                    </div>
                }

                
            </div>
        </form>
    </div>
</div>