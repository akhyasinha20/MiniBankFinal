@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="card p-4 mt-4">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <div>
            <h1 class="page-title mb-0">Employee Dashboard</h1>
            <div class="text-muted">Manage customers, accounts and reports</div>
        </div>
        <div class="text-end">
            <small class="text-muted">Signed in as</small>
            <div class="fw-semibold text-primary">@Session["Username"]</div>
        </div>
    </div>

    <div class="dashboard-grid mt-3">
        <div class="dashboard-card variant-blue">
            <div class="card-top">
                <div class="icon" aria-hidden="true">
                    <svg width="28" height="28" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <circle cx="12" cy="8" r="3.2" fill="#0b3d91" />
                        <path d="M4 20c0-3.3 3.6-6 8-6s8 2.7 8 6" fill="#0b3d91" opacity="0.08" />
                    </svg>
                </div>
                <div>
                    <div class="card-title">Open Savings Account</div>
                    <div class="card-sub">Create customer & savings account</div>
                </div>
            </div>

            <div class="d-flex justify-content-end mt-3">
                <a href="@Url.Action("OpenAccount","Employee")" class="btn btn-primary">Create</a>
            </div>
        </div>

        <div class="dashboard-card variant-gold">
            <div class="card-top">
                <div class="icon">
                    <svg width="28" height="28" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <ellipse cx="12" cy="6" rx="6" ry="2" fill="#c9a14a" />
                        <path d="M6 6v6c0 2.2 3.3 4 6 4s6-1.8 6-4V6" fill="#c9a14a" opacity="0.08" />
                    </svg>
                </div>
                <div>
                    <div class="card-title">Loan Account</div>
                    <div class="card-sub">Create or manage loans</div>
                </div>
            </div>

            <div class="d-flex justify-content-end mt-3">
                <a href="@Url.Action("LoanAccount","Employee")" class="btn btn-outline-accent">Create</a>
            </div>
        </div>

        <div class="dashboard-card variant-teal">
            <div class="card-top">
                <div class="icon">
                    <svg width="28" height="28" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <rect x="3" y="6" width="18" height="12" rx="2" fill="#0b3d91" opacity="0.06" />
                        <path d="M7 10h10" stroke="#0b3d91" stroke-width="1.6" stroke-linecap="round" />
                    </svg>
                </div>
                <div>
                    <div class="card-title">Transactions</div>
                    <div class="card-sub">Deposit / Withdraw</div>
                </div>
            </div>

            <div class="d-flex justify-content-end mt-3">
                <a href="@Url.Action("DepositWithdraw","Employee")" class="btn btn-teal">Process</a>
            </div>
        </div>

        <div class="dashboard-card variant-coral">
            <div class="card-top">
                <div class="icon">
                    <svg width="28" height="28" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <rect x="3" y="4" width="18" height="16" rx="2" fill="#0b3d91" opacity="0.06" />
                        <path d="M7 12h10M7 8h10M7 16h6" stroke="#0b3d91" stroke-width="1.4" stroke-linecap="round" />
                    </svg>
                </div>
                <div>
                    <div class="card-title">Reports</div>
                    <div class="card-sub">Transaction reports</div>
                </div>
            </div>

            <div class="d-flex justify-content-end mt-3">
                <a href="@Url.Action("Report","Employee")" class="btn btn-outline-accent">View</a>
            </div>
        </div>

        <div class="dashboard-card variant-blue">
            <div class="card-top">
                <div class="icon">
                    <svg width="28" height="28" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M3 20h18" stroke="#0b3d91" stroke-width="1.2" stroke-linecap="round" />
                        <rect x="7" y="6" width="10" height="8" rx="1.5" fill="#c9a14a" opacity="0.08" />
                    </svg>
                </div>
                <div>
                    <div class="card-title">Account Management</div>
                    <div class="card-sub">Close customer accounts</div>
                </div>
            </div>

            <div class="d-flex justify-content-end mt-3">
                <a href="@Url.Action("CloseAccount","Employee")" class="btn btn-coral">Manage</a>
            </div>
        </div>
    </div>
</div>