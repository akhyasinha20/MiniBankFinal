@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";

    var customer = ViewBag.Customer as MiniBank.Models.Customer;
    var custName = customer != null ? customer.CustName : "-";
    var custEmail = customer != null ? customer.Email : "-";
    var custDob = (customer != null && customer.DOB.HasValue) ? customer.DOB.Value.ToString("yyyy-MM-dd") : "-";
    var custPAN = customer != null ? customer.PAN : "-";
    var custCustomerId = customer != null ? customer.CustomerId.ToString() : "-";
    var custCreated = (customer != null && customer.CreatedAt.HasValue) ? customer.CreatedAt.Value.ToString("yyyy-MM-dd") : "-";

    decimal totalBalance = (ViewBag.TotalBalance ?? 0m);
    decimal incomingEMI = (ViewBag.IncomingEMI ?? 0m);
    int activeLoanCount = (ViewBag.ActiveLoanCount ?? 0);

    var loanSummaries = ViewBag.LoanSummaries as IEnumerable<dynamic> ?? Enumerable.Empty<dynamic>();
}

<div class="card p-4 mt-4">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <div>
            <h1 class="page-title mb-0">Customer Dashboard</h1>
            <div class="text-muted small">Overview of your accounts and loan status</div>
        </div>
        <div class="text-end">
            <small class="text-muted">Signed in as</small>
            <div class="fw-semibold text-primary">@Session["Username"]</div>
        </div>
    </div>

    <!-- Top summary tiles -->
    <div class="dashboard-grid mt-3">
        <div class="dashboard-card variant-blue">
            <div class="card-top">
                <div class="icon" aria-hidden="true">
                    <svg width="28" height="28" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <circle cx="12" cy="8" r="3.2" fill="#0b3d91" />
                        <path d="M4 20c0-3.3 3.6-6 8-6s8 2.7 8 6" fill="#0b3d91" opacity="0.06" />
                    </svg>
                </div>
                <div>
                    <div class="card-title">Profile</div>
                    <div class="card-sub">Customer details</div>
                </div>
            </div>

            <div class="mt-3">
                <div class="fw-semibold">@Html.Encode(custName)</div>
                <div class="text-muted small">@Html.Encode(custEmail)</div>
                <div class="text-muted small mt-1">PAN: @Html.Encode(custPAN)</div>
                <div class="text-muted small mt-1">Customer Id: @Html.Encode(custCustomerId)</div>
            </div>
        </div>

        <div class="dashboard-card variant-gold">
            <div class="card-top">
                <div class="icon" aria-hidden="true">
                    <svg width="28" height="28" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <rect x="3" y="4" width="18" height="16" rx="2" fill="#c9a14a" opacity="0.08" />
                        <path d="M7 10h10" stroke="#c9a14a" stroke-width="1.4" stroke-linecap="round" />
                    </svg>
                </div>
                <div>
                    <div class="card-title">Total Savings</div>
                    <div class="card-sub">Available across accounts</div>
                </div>
            </div>

            <div class="d-flex justify-content-between align-items-end mt-3">
                <div class="value" style="font-size:1.5rem; font-weight:700; color:#0b3d91;">₹@totalBalance.ToString("N2")</div>
                <div class="text-muted small">Updated live</div>
            </div>
        </div>

        <div class="dashboard-card variant-teal">
            <div class="card-top">
                <div class="icon" aria-hidden="true">
                    <svg width="28" height="28" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <ellipse cx="12" cy="6" rx="6" ry="2" fill="#0fa3a1" />
                        <path d="M6 6v6c0 2.2 3.3 4 6 4s6-1.8 6-4V6" fill="#0fa3a1" opacity="0.06" />
                    </svg>
                </div>
                <div>
                    <div class="card-title">Loans</div>
                    <div class="card-sub">@activeLoanCount active</div>
                </div>
            </div>

            <div class="mt-3">
                <div class="fw-semibold" style="font-size:1.25rem;">Incoming EMI: <span class="text-warning">₹@incomingEMI.ToString("N2")</span></div>
                <div class="text-muted small mt-1">Manage payments below</div>
            </div>
        </div>
    </div>

    <!-- Loan list (if any) -->
    <div class="mt-4">
        <h5 class="mb-3 text-primary">Loan Accounts</h5>

        @if (!loanSummaries.Any())
        {
            <div class="alert alert-info">You have no active loans.</div>
        }
        else
        {
            <div class="row g-3">
                @foreach (var ls in loanSummaries)
                {
                    <div class="col-md-6">
                        <div class="dashboard-card variant-gold">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <div class="fw-semibold">Loan Account #@ls.LoanAccountId</div>
                                    <div class="text-muted small">Start: @(((DateTime)ls.StartDate).ToString("yyyy-MM-dd"))</div>
                                </div>
                                <div class="text-end">
                                    <div class="fw-bold text-danger">₹@(((decimal)ls.Outstanding).ToString("N2"))</div>
                                    <div class="text-muted small">Outstanding</div>
                                </div>
                            </div>

                            <hr />

                            <div class="d-flex justify-content-between align-items-center">
                                <div class="text-muted small">
                                    EMI: @(ls.EMI != null ? "₹" + ((decimal)ls.EMI).ToString("N2") : "-")<br />
                                    Paid: @ls.PaymentsMade
                                </div>
                                <div class="text-end">
                                    <div class="text-muted small">Next EMI</div>
                                    @{
                                        var nextDue = (DateTime)ls.NextEMIDate;
                                        if (nextDue.Date <= DateTime.Today)
                                        {
                                            <div class="text-danger fw-semibold">@nextDue.ToString("yyyy-MM-dd")</div>
                                        }
                                        else
                                        {
                                            <div class="fw-semibold">@nextDue.ToString("yyyy-MM-dd")</div>
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>

    <!-- Actions -->
    <div class="text-center mt-4 d-flex justify-content-center gap-2 flex-wrap">
        <a href="@Url.Action("ViewTransactions","Customer")" class="btn btn-outline-accent px-4">📄 View Transactions</a>
        <a href="@Url.Action("Transfer","Customer")" class="btn btn-teal px-4">💸 Transfer Money</a>
        <a href="@Url.Action("PayEMI","Customer")" class="btn btn-coral px-4">💰 Pay EMI</a>
        <a href="@Url.Action("ResetPassword","Customer")" class="btn btn-outline-secondary px-4">🔑 Reset Password</a>
    </div>
</div>